<?xml version='1.0' encoding='utf-8'?>
<widget id="com.brother.ishop" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Brother iShop</name>
    <description>Brother E-Commerce Apps</description>
    <author email="support@emetra.io" href="http://emetra.io/">Emetra</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="1024" src="resources/icons/ios/icon-1024.png" width="1024" />
        <icon height="29" src="resources/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="resources/icons/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="resources/icons/ios/icon-small@3x.png" width="87" />
        <icon height="40" src="resources/icons/ios/icon-small-40.png" width="40" />
        <icon height="80" src="resources/icons/ios/icon-small-40@2x.png" width="80" />
        <icon height="120" src="resources/icons/ios/icon-small-40@3x.png" width="120" />
        <icon height="50" src="resources/icons/ios/icon-small-50.png" width="50" />
        <icon height="100" src="resources/icons/ios/icon-small-50@2x.png" width="100" />
        <icon height="57" src="resources/icons/ios/icon.png" width="57" />
        <icon height="114" src="resources/icons/ios/icon@2x.png" width="114" />
        <icon height="60" src="resources/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="resources/icons/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="resources/icons/ios/icon-60@3x.png" width="180" />
        <icon height="72" src="resources/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="resources/icons/ios/icon-72@2x.png" width="144" />
        <icon height="76" src="resources/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="resources/icons/ios/icon-76@2x.png" width="152" />
        <icon height="167" src="resources/icons/ios/icon-167.png" width="167" />
        <icon height="167" src="resources/icons/ios/icon-83.5@2x.png" width="167" />
        <splash height="480" src="resources/screens/ios/Default~iphone.png" width="320" />
        <splash height="960" src="resources/screens/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="resources/screens/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="resources/screens/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1136" src="resources/screens/ios/Default-568h@2x~iphone.png" width="640" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/icons/android/ldpi.png" />
        <icon density="mdpi" src="resources/icons/android/mdpi.png" />
        <icon density="hdpi" src="resources/icons/android/hdpi.png" />
        <icon density="xhdpi" src="resources/icons/android/xhdpi.png" />
        <icon density="xxhdpi" src="resources/icons/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/icons/android/xxxhdpi.png" />
        <splash density="port-ldpi" src="resources/screens/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="resources/screens/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="resources/screens/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="resources/screens/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="resources/screens/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="resources/screens/android/splash-port-xxxhdpi.png" />
    </platform>
    <engine name="android" spec="6.3.0" />
    <engine name="ios" spec="4.5.4" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <plugin name="cordova-plugin-camera" spec="^3.0.0" />
    <plugin name="mx.ferreyra.callnumber" spec="0.0.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^7.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="To locate you" />
    </plugin>
    <plugin name="cordova-plugin-nativegeocoder" spec="^2.0.4" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="call-number" spec="^1.0.1" />
    <plugin name="cordova-plugin-fcm" spec="^2.1.2" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.0" />
    <plugin name="cordova-plugin-broadcaster" spec="^3.0.1" />
</widget>
